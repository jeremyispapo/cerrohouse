mixin songs(song__img,song__title,song__artist,song__time,song__link)
		article.song
			figure.song__img
				img(src="../assets/images/users/"+song__img, alt="alt")
			h3.song__title #{song__title}
			span.song__artist #{song__artist}
			span.song__time #{song__time}
			a.song__link(href=""+song__link target="_blank"): span.song__icon

mixin buttons_blog(op1,op2,op3)
	.box__buttons
		button.button #{op1}
		button.button #{op2}
		button.button #{op3}
