mixin caja(imagen, usuario, titulo, texto,link)
		a(href=""+link).caja
			figure.caja__imagen: img(src="../assets/images/anuncios_blog/"+imagen, alt="foto del articulo:"+imagen)
			.caja__contenido
				figure.caja__usuario: img(src="../assets/images/users/"+usuario, alt="alt")
				h3.title__card #{titulo}
				p #{texto}
			
mixin tarjeta__usuario(usuario, nickName, nickName__redes, user__perfil)
	article.tarjeta
		figure.tarjeta__imagen: img(src="../assets/images/users/"+usuario, alt="alt")
		h3.title__card #{nickName}
		a.subtitle__card(href="https://www.instagram.com/"+nickName__redes) @#{nickName__redes}
		a.button__link--user(href=""+user__perfil) Ver Perfil

mixin hero_blog(titulo)
	h1.hero__title #{titulo}

mixin principal(usuario,nickName,link,nickName__redes,frase,fecha)
	figure.principal__image
		img(src="../assets/images/users/"+usuario, alt="alt")
	h1.principal__title #{nickName}
	a.subtitle__card--perfil(href=""+link target="_blank") #{nickName__redes}
	p.principal__quote #{frase}
	span.principal__date #{fecha}

mixin stickers(st1,st2,st3,st4,st5)
	h2.section__title.title__flex Stickers
	div.stickers__content
		figure.stickers__item
			img(src="../assets/images/users/"+st1, alt="alt")
		figure.stickers__item
			img(src="../assets/images/users/"+st2, alt="alt")
		figure.stickers__item 
			img(src="../assets/images/users/"+st3, alt="alt")
		figure.stickers__item
			img(src="../assets/images/users/"+st4, alt="alt")
		figure.stickers__item
			img(src="../assets/images/users/"+st5, alt="alt")

mixin photos(ph1,ph2,ph3)
	h2.section__title.title__flex Fotos
	div.photos__content
		figure.photos__item
			img(src="../assets/images/users/"+ph1, alt="alt")
		figure.photos__item
			img(src="../assets/images/users/"+ph2, alt="alt")
		figure.photos__item
