mixin principal(foto,titulo,insta,frase,fecha)
	figure
		img(src=""+foto, alt="alt")
	h1 #{titulo}
	span.link 
		a(href="https://instagram.com" target="_blank") #{insta}
	p.quote #{frase}
	span.date #{fecha}

